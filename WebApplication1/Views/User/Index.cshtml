@using PagedList.Mvc
@model  PagedList.IPagedList<WebApplication1.Models.tbl_product>

@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>


.cimg {
   @*-webkit-transform:scale(1.5, 1.5);*@
   transition:transform 0.5s;

}

    .cimg:hover {
        @*-webkit-transform: rotatez(360deg);*@
        -webkit-transform: scale(1.2, 1.2);
        transition: transform 0.5s;
    }

</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/CSS/siyahSerit.css" rel="stylesheet">

</head>
<body>
    <div style="height:1150px; ">

        <div class="row" style="margin-bottom:90px">

            <div class="col-lg-2" style="height:300px; border:2px solid solid; ">
                <img src="~/Content/img/Ad1Car.gif" class="img img-responsive" style="width:200%; height:200%" />
            </div>

            <div class="col-lg-8 col-md-8">
                <div class="row">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">

                                <img class="img img-responsive cimg" src="@Url.Content(item.pro_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.pro_name, "ViewAd", new { id = @item.pro_id })</h4>

                            </div>

                        }
                    }
                </div>
            </div>


            <div class="col-lg-2 col-md-2">
                <img src="~/Content/img/LOB_val_600.gif" class="img img-responsive" style="width:100%; height:100%" />
            </div>





        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</body>
</html>